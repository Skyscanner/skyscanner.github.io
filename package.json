{
  "name": "skyscanner.github.io",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@skyscanner/backpack-web": "^23.0.0",
    "bpk-mixins": "^40.3.1",
    "bpk-stylesheets": "^9.0.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^6.0.3"
  },
  "homepage": "https://skyscanner.github.io",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:sass": "stylelint 'src/**/*.scss'",
    "lint:sass:fix": "stylelint 'src/**/*.scss' --fix",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "eslint . --ext .js,.jsx --fix",
    "lint": "npm run lint:js && npm run lint:sass"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@skyscanner/backpack-react-scripts": "^10.4.0",
    "@skyscanner/stylelint-config-skyscanner": "^7.1.0",
    "@testing-library/react": "^12.1.5",
    "eslint_d": "^12.2.0",
    "husky": "^8.0.1",
    "postcss": "^8.4.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "backpack-react-scripts": {
    "babelIncludePrefixes": [
      "@skyscanner/backpack-web"
    ]
  }
}
